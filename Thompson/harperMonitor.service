[Unit]
Description=UDP monitor

[Service]
# type=simple
User=pat
Group=pat

WorkingDirectory=/home/pat/logs
ReadWritePaths=/home/pat/logs /thompson/share/Data/tpw /home/pat/probar
ReadOnlyPaths=/

ExecStart=/home/pat/ARCTERX2025/Thompson/harperMonitor.py \
	--logfile=/home/pat/logs/harperMonitor.log \
	--navPort=55555 \
	--tsgPort=55777 \
	--intakePort=55778 \
	--verbose \
	--copyTo=/thompson/share/Data/tpw \
	--config=/home/pat/ARCTERX2025/Thompson/udp.yaml \
	--csvFilename=/home/pat/probar/tpw.csv \
	--csvBatch=60 \
	/home/pat/probar/udp.nc \
	/home/pat/probar/udp.YYYYMMDD.nc

Restart=always
RestartSec=60

# Harden
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
